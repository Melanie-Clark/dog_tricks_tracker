<div class="sign_up_form">
  <h1 class="first_color">Sign up</h1>
  <br>
  <div class="form"></div>
    <%= form_for(@user) do |f| %>
      <%= f.text_field :first_name, :placeholder => "First Name" %>
      <%= f.text_field :last_name, :placeholder => "Surname" %>
      <%= f.email_field :email, :placeholder => "E-mail" %>
      <%= f.password_field :password, :placeholder => "Password" %>
      <%= f.submit "Create an Account", class: "btn-submit" %>
    <% end %>
  </div>
</div>
